	<insert id="createRentNumber" parameterType="com.alfred.bus.domain.Rent">
		insert into bus_rent
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="rentid != null">
				rentid,
			</if>
			<if test="price != null">
				price,
			</if>
			<if test="begindate != null">
				begindate,
			</if>
			<if test="returndate != null">
