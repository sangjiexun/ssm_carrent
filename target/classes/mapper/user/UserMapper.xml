		</trim>
	</insert>
	<update id="downMoney" parameterType="com.alfred.bus.domain.Rent">
		update bus_customer set
			money=money-#{price}
			where identity=#{identity}
	</update>
	<update id="changeCarState" parameterType="string">
		update bus_car set
			isrenting = 1
			where carnumber = #{carnumber}
	</update>


